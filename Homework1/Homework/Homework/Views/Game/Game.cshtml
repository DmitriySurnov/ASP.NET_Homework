@model GameDataModel;
@{
	ViewData["Title"] = "Игра в крестики нолики";
}
@using Homework.HtmlHelpers

<link rel="stylesheet" href="~/css/stylesGame.css" />

<div class="text-center">
	<h1 class="display-4">
		Привет @Model.СurrentРlayerName
		@if (Model.InformationAboutWinner != "")
		{
			<div>Игра завершена</div>
		}
		else if (Model.IsРlayer)
		{
			<br /> @Html.WhoseMove(Model)
		}
	</h1>
	<form method="post" asp-area="" asp-controller="Game">
		@await Html.PartialAsync("../_Partial/Field",@Model.GameField)
	</form>
	<h1 class="display-4">
		@Model.InformationAboutWinner
	</h1>
	<form method="post" asp-area="" asp-controller="Game">
		<component type="typeof(Homework.Components.ControlButtons)" render-mode="Static" param-dataModel="Model" />
	</form>
</div>
