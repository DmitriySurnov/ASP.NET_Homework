@model GameDataModel
@{
	ViewData["Title"] = "Игра в крестики нолики";
}

<style type="text/css">
	table {
		width: 100px;
		height: 100px;
		margin: auto;
	}

	tr, td {
		width: 32px;
		height: 32px;
	}

	table, th, td {
		border: 1px solid black;
		border-collapse: collapse;
	}

	button {
		margin-top: 10px;
	}

	.Cells {
		width: 100%;
		height: 100%;
		margin-top: 3px;
		border-width: 0px;
		padding: 0px;
	}
</style>

<div class="text-center">
	<h1 class="display-4">
		Привет
		@if (Model.IsX)
		{
			<code> @Model.FirstPlayer.Name </code>
		}
		else
		{
			<code> @Model.SecondPlayer.Name </code>
		}
	</h1>
	<form method="post" asp-area="" asp-controller="Home">
		<table>
			<tr>
				<td>
					@if (Model.Field[0] == "")
					{
						<button class="Cells" name="idPole" value="0" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[0]</code>
					}
				</td>
				<td>
					@if (Model.Field[1] == "")
					{
						<button class="Cells" name="idPole" value="1" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[1]</code>
					}
				</td>
				<td>
					@if (Model.Field[2] == "")
					{
						<button class="Cells" name="idPole" value="2" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[2]</code>
					}
				</td>
			</tr>
			<tr>
				<td>
					@if (Model.Field[3] == "")
					{
						<button class="Cells" name="idPole" value="3" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[3]</code>
					}
				</td>
				<td>
					@if (Model.Field[4] == "")
					{
						<button class="Cells" name="idPole" value="4" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[4]</code>
					}
				</td>
				<td>
					@if (Model.Field[5] == "")
					{
						<button class="Cells" name="idPole" value="5" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[5]</code>
					}
				</td>
			</tr>
			<tr>
				<td>
					@if (Model.Field[6] == "")
					{
						<button class="Cells" name="idPole" value="6" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[6]</code>
					}
				</td>
				<td>
					@if (Model.Field[7] == "")
					{
						<button class="Cells" name="idPole" value="7" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[7]</code>
					}
				</td>
				<td>
					@if (Model.Field[8] == "")
					{
						<button class="Cells" name="idPole" value="8" asp-action="Game"></button>
					}
					else
					{
						<code>@Model.Field[8]</code>
					}
				</td>
			</tr>
		</table>
		<input type="hidden" name="IsX" value="@Model.IsX.ToString()" />
		<input type="hidden" name="FieldString" value="@Model.FieldString" />
		<input type="hidden" name="firstPlayerName" value="@Model.FirstPlayer.Name" />
		<input type="hidden" name="secondPlayerName" value="@Model.SecondPlayer.Name" />
		<button title="Обновить" asp-action="StartGame">Обновить</button>
		<button title="завершить игру" asp-action="FinishGame">завершить игру</button>
	</form>
</div>
